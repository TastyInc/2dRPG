<!-- 
Actions:
0: return or start game
1: main menu
2: pause
3: options
4: savefiles
5: trophyroom
6: extras
7
8
9: quit game
-->

<menulist>
	<menu id="1" name="main" background="">
		<element id="1" type="button" name="play" text="Play" action="0"/>
		<element id="2" type="button" name="options" text="Options"  action="3"/>
		<element id="3" type="button" name="extras" text="Extras" action="6"/>
		<element id="4" type="button" name="trophyroom" text="Trophy Room" action="5"/>
		<element id="5" type="button" name="quit" text="Quit" action="9"/>
	</menu>
	<menu id="2" name="pause" background="">
		<element id="1" type="button" name="main" text="Main Menu" action="1"/>
		<element id="2" type="button" name="options" text="Options" action="3"/>
		<element id="3" type="button" name="returntogame" text="Return to Game" action="0"/>
	</menu>
	<menu id="3" name="options" background="">
		<element id="1" type="bar" name="music" text="Music"/>
		<element id="2" type="bar" name="soundeffects" text="Sound Effects"/>
		<element id="1" type="button" name="main" text="Main Menu"/>
		<element id="2" type="button" name="returntogame" text="Return to Game"/>
	</menu>
	<menu id="4" name="savefiles" background="">
		<element id="1" type="button" name="main" text="Main Menu"/>		
	</menu>
	<menu id="5" name="trophyroom" background="">
		<element id="1" type="button" name="main" text="Main Menu"/>	
	</menu>
	<menu id="6" name="extras" background="">
		<element id="1" type="button" name="main" text="Main Menu"/>	
	</menu>
</menulist>